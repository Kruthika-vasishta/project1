# feedback_entry.py
def collect_feedback():
    feedback_list = []
    while True:
        name = input("Enter student name (or type 'exit'): ")
        if name.lower() == 'exit':
            break
        score = float(input("Enter score (0-100): "))
        feedback_list.append({'name': name, 'score': score})
    return feedback_list

